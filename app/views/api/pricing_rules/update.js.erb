<% if flash[:success].present? %>
  void function () {
    jQuery.colorbox.close();
    const html = "<%= escape_javascript(render partial: 'pricing_rule', locals: { pricing_rule: @pricing_rule }) %>";
    const id = "#<%= dom_id(@pricing_rule) %>";

    jQuery(id).replaceWith(html);
  }();
<% else %>
  <%= render 'shared/flash_alerts' %>
<% end %>

