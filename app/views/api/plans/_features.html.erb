<div>
  <h2 id="header_table">Features</h2>
  <table id="features" class='contract_table pf-c-table'>
    <thead>
      <tr>
        <th class="pf-m-width-35">Name</th>
        <th class="pf-m-width-35">Description</th>
        <th class="pf-m-width-10 operations">Enabled?</th>
        <th class="pf-m-width-20 operations">
          <%= link_to 'New feature', new_admin_plan_feature_path(@plan),
                      :class => 'fancybox action add', 'data-autodimensions' => 'true' -%>
        </th>
      </tr>
    </thead>

    <tbody>

      <tr class="notice" <%= "style=display:none;" unless @plan.features.all_available.empty? -%>>
        <td colspan="4">
          <span>This plan has no features yet.</span>
        </td>
      </tr>

      <%= render :partial => 'api/features/feature', :collection => @plan.features.all_available %>
    </tbody>
  </table>
</div>
