<% content_for :page_header_title, @metric.child? ? 'New Method' : 'New Metric' %>
<%= semantic_form_for @metric,
  :url => if @metric.child?
            admin_service_metric_children_path(@service, @metric.parent)
          else
            admin_service_metrics_path(@service)
          end do |form| %>
  <%= render 'form', :form => form %>
<% end %>

