<% if flash[:success].present? %>
  jQuery.colorbox.close();
  void function () {
    const html = "<%= escape_javascript(render partial: 'feature', locals: { feature: @feature }) %>";
    const id = "#<%= dom_id(@feature) %>";
    jQuery(id).replaceWith(html);
  }();
<% else %>
  jQuery.colorbox.resize();
  jQuery('#warning').show();
<% end %>

