<% if flash[:success].present? %>
  void function () {
    jQuery.colorbox.close();
    const html = "<%= escape_javascript(render partial: 'usage_limit', locals: { usage_limit: @usage_limit }) %>";
    const id = "#<%= dom_id(@usage_limit) %>";

    jQuery(id).replaceWith(html);
  }();
<% else %>
  <%= render 'error' %>
<% end %>

