<%= render 'forums/admin/menu' %>

<div id="forum">
  <h1>Edit Post</h1>
  <p>Thread <%= link_to h(@post.topic.title), forum_topic_path(@post.topic) %></p>

  <%= semantic_form_for @post, :url => forum_post_path(@post) do |form| -%>
    <%= form.inputs do %>
      <%= render 'forums/admin/posts/fields', :form => form %>
    <% end %>

    <%= form.actions do %>
      <%= form.commit_button %>
    <% end %>
  <% end %>
</div>
