<% url = "/finance/accounts/#{@buyer.id}/invoices/#{@invoice.id}/line_items" %>

void function ($) {
  const addButtonId = 'a[href="<%= url %>/new"]';
  $(addButtonId).hide();

  const deleteLineItemFormsId = 'form[action^="<%= url %>"]';
  $(deleteLineItemFormsId).each(function () {
    this.parentElement.removeChild(this);
  });

  $.colorbox.close();
}(jQuery);

