  <%= render :partial => '/finance/provider/shared/line_items', :locals => { :editable => allow_edit? } %>
  <%= render :partial => '/finance/provider/shared/payment_transactions' %>
  <%= render :partial => '/finance/provider/invoices/actions' %>
</div>
