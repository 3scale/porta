<%= form.fields_for :billing_address do |billing_address_fields| %>
  <%= billing_address_fields.inputs :name => 'Billing Address', :class => 'inputs' do %>
      <%= billing_address_fields.input :name, :required => true %>
      <%= billing_address_fields.input :address1, :required => true %>
      <%= billing_address_fields.input :address2 %>
      <%= billing_address_fields.input :city, :required => true %>
      <%= billing_address_fields.input :country, :as => :select, :collection => Country.all.map{|c| [c.name, c.code]}, :required => true %>
      <%= billing_address_fields.input :state %>
      <%= billing_address_fields.input :zip %>
      <%= billing_address_fields.input :phone %>
  <% end %>
<% end %>
