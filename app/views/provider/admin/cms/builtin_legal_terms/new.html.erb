<% content_for(:title) do %>
  Legal Terms for <%= @page.title %>
<% end %>

<% content_for :page_header_title, "Legal Terms for #{@page.title}" %>
<%= render 'info' %>
<%= cms_form_for(@page) do |f| %>
  <%= render 'form', :f => f %>
  <%= f.input :draft, as: :codemirror, label: false, value: f.object.current %>
  <%= render 'buttons', f: f %>
<% end %>
