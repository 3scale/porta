<%= render 'includes' %>

<% content_for :page_header_title, "Override email #{@page.name}" %>

<%= cms_form_for(@page) do |f| %>
  <%= render 'form', :f => f %>
  <%= f.inputs do %>
    <%= f.input :system_name, :as => :hidden %>
  <% end %>

  <%= f.input :draft, as: :codemirror, label: false, input_html: { value: f.object.current } %>

  <%= render 'buttons', f: f %>
<% end %>
