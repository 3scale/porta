<%= render partial: 'provider/admin/cms/tab_content_title', locals: { header: "File '#{@file.path}'" } %>

<%= cms_new_button_dropdown(CMS::File) %>

<%= cms_form_for(@file, :html => { :multipart => true }) do |f| %>
  <%= render 'form', :f => f %>

  <%= f.actions do %>
    <div class="pf-c-action-list__group">
      <%= f.delete_button %>
    </div>
    <div class="pf-c-action-list__group">
      <%= link_to "Download", @file.url.to_s, :class => 'pf-c-button pf-m-secondary'  %>
      <%= f.commit_button 'Save' %>
    </div>
  <% end %>

  <% if @file.is_image? %>
    <div class='image-preview'>
      <%= link_to image_tag(@file.url.to_s, :class => 'preview', :title => 'Preview'), @file.url.to_s %>
    </div>
  <% end %>
<% end %>
