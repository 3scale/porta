<h1>New page</h1>

<%= cms_new_button_dropdown(CMS::Page) %>

<%= cms_form_for(@page) do |f| %>
  <%= render 'form', :f => f %>
  <%= f.input :draft, :as => :codemirror %>

  <%= f.buttons do %>
    <%= f.button 'Create Page', button_html: { class: 'pf-c-button pf-m-primary' } %>
  <% end %>
<% end %>
