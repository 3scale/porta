<h1>New layout</h1>

<%= cms_new_button_dropdown(CMS::Layout) %>

<%= cms_form_for(@page) do |f| %>
  <%= render 'form', :f => f %>
  <%= f.input :draft, :as => :codemirror, :label => false %>

  <%= f.buttons do %>
    <%= f.button 'Create Layout', button_html: { class: 'pf-c-button pf-m-primary' } %>
  <% end %>
<% end %>
