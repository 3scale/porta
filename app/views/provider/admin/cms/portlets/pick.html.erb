<%= render partial: 'provider/admin/cms/tab_content_title', locals: { header: 'Pick a Portlet',
                                                                      body: 'Which portlet would you like to create today?' } %>

<section class="pf-c-page__main-section pf-m-light">
  <table>
    <thead>
      <tr>
        <th>Portlet</th>
        <th>Description</th>
      </tr>
    </thead>

    <tbody>
      <% @available_portlets.each do |portlet| %>
        <tr>
          <td><%= link_to portlet.human_name, :action => :new, :type => portlet %></td>
          <td><%= portlet.description %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>
