<%= render 'provider/admin/cms/tab_content_title', header: "New #{@page.class.model_name.human} Portlet" %>

<%= cms_new_button_dropdown(CMS::Portlet) %>

<%= cms_form_for(@page) do |f| %>
  <%= render 'form', :f => f %>

  <%= f.input :draft, :as => :codemirror, :value => f.object.draft %>
  <%= f.actions do %>
    <%= f.commit_button %>
  <% end %>
<% end %>
