<%= semantic_form_for :create_trash, url: provider_admin_messages_bulk_trash_path do |form| %>
  <%= form.inputs do %>
    <p class='inline-hint'>It will move all your selected messages to the trash.</p>
    <%= hidden_field_tag 'scope', params[:scope] %>
    <% if params[:selected_total_entries].present? %>
      <%= hidden_field_tag 'selected_total_entries', params[:selected_total_entries] %>
    <% else %>
      <% params[:selected].each do |selected_id| %>
        <%= hidden_field_tag 'selected[]', selected_id %>
      <% end %>
    <% end %>
    <%= form.actions do %>
      <%= form.commit_button 'Delete', button_html: { class: 'pf-m-danger', data: { 'disable-with' => 'Running bulk action...' }} %>
    <% end %>
  <% end %>
<% end %>
