<% content_for :sublayout_title, @metric.child? ? "New Method" : "New Metric" %>

<% url = if @metric.child?
            provider_admin_backend_api_metric_children_path(@backend_api, @metric.parent)
          else
            provider_admin_backend_api_metrics_path(@backend_api)
          end %>
<%= semantic_form_for @metric, :url => url do |form| %>
  <%= render 'form_new', form: form, backend_api: @backend_api, metric: @metric %>
<% end %>
