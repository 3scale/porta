<div class="pf-c-card__title">
  &nbsp;
</div>
<div class="pf-c-card__body">
  <%= semantic_form_for @cinstance, url: provider_admin_application_key_path(@cinstance, @cinstance.user_key),
                                    remote: true,
                                    html: { class: 'pf-c-form pf-m-limit-width' }  do |form| %>
    <div id="invalid-key-warning" class="pf-c-alert pf-m-danger pf-m-inline" style="display:none;">
      <div class="pf-c-alert__icon">
        <i class="fas fa-fw fa-exclamation-circle" aria-hidden="true"></i>
      </div>
      <p class="pf-c-alert__title"></p>
    </div>

    <%= form.input :user_key, as: :patternfly_input, required: true, input_html: { size: 100, value: nil, required: false } %>

    <div class="pf-c-form__group pf-m-action">
      <div class="pf-c-form__actions">
        <button class="pf-c-button pf-m-primary" type="submit" data-disable-with="Saving...">Save</button>
        <button class="pf-c-button pf-m-link fancybox-close" type="submit">Cancel</button>
      </div>
    </div>
  <% end %>
</div>
