<%= render 'buyers/accounts/menu' %>

<h2>
  User <%= h @user.display_name %> of <%= @user.account.provider? ? 'tenant' : 'buyer' %> account <%= h @user.account.org_name %>
  <%= link_to 'Edit', edit_resource_path(@user), :class => 'action edit' %>
</h2>

<table class="list mini">

  <tr>
    <th>Name</th>
    <td><%= h @user.display_name %></td>
  </tr>

  <tr>
    <th>Created on</th>
    <td colspan="2"><%= h @user.created_at.to_s(:long) %></td>
  </tr>

  <% unless @user.last_login_at.blank? -%>
    <tr>
      <th>Last logged in on</th>
      <td><%= h @user.last_login_at.to_s(:long) %></td>
    </tr>
  <% end -%>

  <tr>
    <th>Role</th>
    <td><%= h @user.role %></td>
  </tr>

  <tr>
    <th>State</th>
    <td>
      <% if @user.active? %>
        <i class="included fa fa-check-circle-o" title="Feature is enabled for this plan"></i>
      <% else %>
        <i class="excluded fa fa-times-circle-o" title="Feature is disabled for this plan"></i>
      <% end %>
      <%= h @user.state %>
      <span class="operations">
        <%= button_activate_or_suspend(@user) %>
      </span>
    </td>
  </tr>

  <%= fields_definitions_rows(@user,["name"]) %>

</table>
