<h2>Customize Account Plan</h2>

<% semantic_form_for plan,
                     :url => admin_buyers_contract_custom_plans_path(contract),
                     :html => {:class => 'remote'} do |form| %>
  <%= form.inputs do %>
    <%= form.input :name, :required => true %>
    <%= form.system_name %>
  <% end %>

  <%= form.actions do %>
    <%= form.action :submit %>
  <% end %>
<% end %>
