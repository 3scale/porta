<% content_for :menu do %>
  <%= render 'buyers/accounts/menu' %>
<% end %>

<% content_for :page_header_title, "Invite user to #{@account.org_name}" %>

<%= semantic_form_for @invitation, :url => admin_buyers_account_invitations_path(@account), :html => {:class => 'invitation-form'} do |f| %>

  <%= f.inputs do %>
    <%= f.input :email, :label => 'Send invitation to', :hint => 'Email address to invite to this account' %>
  <% end %>

  <%= f.actions do %>
    <%= f.commit_button 'Send' %>
  <% end %>
<% end %>
