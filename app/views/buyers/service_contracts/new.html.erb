<%= semantic_form_for @service_contract, url: admin_buyers_account_service_contracts_path(@account, service_id: @service.id),
                                         builder: Fields::PatternflyFormBuilder,
                                         html: { 'data-remote': true, class: 'pf-c-form' } do |form| %>
  <%= form.input :plan, as: :patternfly_select,
                        collection: @service_plans,
                        include_blank: false,
                        required: true %>

  <%= form.actions do %>
    <%= form.commit_button 'Create subscription', button_html: { 'data-disable_with': 'Create subscription' } %>
  <% end %>
<% end %>

<%# Workaround to fill colorbox modal's width with the PF form %>
<style>
  div#cboxLoadedContent {
    width: auto !important;
  }
</style>
