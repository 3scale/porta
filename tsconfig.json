{
  "compilerOptions": {
    // Type Checking
    "strict": true,
    "useUnknownInCatchVariables": true,

    // Modules
    "baseUrl": "./app/javascript/src",
    "module": "ES6",
    "moduleResolution": "NodeNext",
    "typeRoots": ["app/javascript/src/Types"],
    "types": ["@types/jest"],

    // Emit
    "declaration": false,
    "sourceMap": true,

    // Interop Constraints
    "esModuleInterop": true, // TODO: Investigate if we can remove this to improve bundle size

    // Language and Environment
    "jsx": "react-jsx",
    "target": "ES6",
  },
  "include": [
    "app/javascript",
    "spec/javascripts"
  ],
  "exclude": [
  ],
  "compileOnSave": false
}
