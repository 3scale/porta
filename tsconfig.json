{
  "compilerOptions": {
    "baseUrl": "./app/javascript/src",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["ES6", "DOM"],
    "module": "ES6",
    "strict": true,
    "sourceMap": true,
    "target": "es5",
    "jsx": "react-jsx",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "typeRoots": ["app/javascript/src/Types", "./node_modules/@types"],
    "allowJs": true,
    "downlevelIteration": true // TODO: either use this or target ES6
  },
  "include": ["app/javascript", "**/*.spec.ts", "**/*.spec.tsx"], // FIXME: should not include tests but VSCode needs it
  "exclude": [
    "node_modules",
    "public"
  ],
  "compileOnSave": false
}
