    {
      "path": "/api/billing_jobs.xml",
      "operations": [
        {
          "httpMethod": "POST",
          "summary": "Trigger Billing",
          "description": "Triggers billing process for all buyers of the account. (Only available for providers that opt-in for the feature.)",
          "group": "finance",
          "parameters": [
            {
              "name": "access_token",
              "description": "A personal Access Token",
              "dataType": "string",
              "required": true,
              "paramType": "query",
              "threescale_name": "access_token"
            },
            {
              "name": "date",
              "description": "Base date for the billing process. It tricks the process to run as this was the actual current system date, affecting period definition, selection of expiring contracts and whether some specific tasks of the process should be triggered or not such as billing of fixed and variable costs and notifications that only happen on day 1 of the month. Format YYYY-MM-DD. Default: current date.",
              "dataType": "string",
              "required": false,
              "paramType": "query"
            }
          ]
        }
      ]
    },
