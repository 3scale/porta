    "/api/invoices/{invoice_id}/line_items.xml": {
      "get": {
        "summary": "Invoice Line Items List",
        "tags": [
          "Invoice Line Items"
        ],
        "parameters": [
          {
            "name": "access_token",
            "in": "query",
