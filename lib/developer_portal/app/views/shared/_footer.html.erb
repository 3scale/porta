<div class="round" id="footer">
  <ul>
    <%# FIXME: remove this and replace it with proper solution (if @service is nil) %>
    <% if @service.try(:txt_support).present? %>
    <li>
      <%= link_to 'Support', '/support' %>
    </li>
    <% end %>

    <% unless site_account.should_be_deleted? %>
      <% settings = site_account.settings %>

      <% if settings.privacy_policy.present? %>
        <li><%= link_to 'Privacy policy', settings_privacy_path %></li>
      <% end %>

      <% if settings.refund_policy.present? %>
        <li><%= link_to 'Refund policy', settings_refunds_path %></li>
      <% end %>
    <% end %>

    <li class="last">
      <%= link_to image_tag('powered_by_logo.png'), "http://www.3scale.net", :target => '_blank' %>
    </li>
  </ul>
</div>
