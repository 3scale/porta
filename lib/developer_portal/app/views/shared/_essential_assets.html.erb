<%# This file only exists to support very old portals that don't use 3scale.js OR 3scale_v2.js
    Packages included in this file are not guaranteed to support jQuery > 2, so unfortunately we
    have to keep them.
%>

<%= csrf_meta_tag %>

<% jquery_version = defined?(jquery) ? jquery : '2.1.4' %>
<%= javascript_include_tag "essential_assets/jquery-#{jquery_version}.min.js" %>

<%= javascript_include_tag 'essential_assets/jquery-migrate-1.2.1.min.js' %>

<%= javascript_include_tag 'vendor/jquery.colorbox-min.js' %>
<%= stylesheet_link_tag 'colorbox/colorbox.css' %>

<%= javascript_include_tag 'essential_assets/highlight-7.5', 'flash', 'essential_assets/remote', 'essential_assets/switch', 'extra_fields' %>
<%= javascript_include_tag 'application' %>

<%= yield :javascripts %>
