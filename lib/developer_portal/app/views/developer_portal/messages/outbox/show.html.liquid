<div class="row">
  <div class="col-md-9">
    {% include 'messages/menu' %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <a href="{{ urls.messages_outbox }}">
          <i class="fa fa-chevron-left"></i>
          All messages
        </a>
        <span class="pull-right">
          {{ '<i class="fa fa-trash"></i>' | html_safe | link_to: message.url, method: 'delete' }}
        </span>
      </div>
      <div class="panel-body panel-footer">
        <dl class="dl-horizontal">
          <dt>Subject</dt>
          <dd>{{ message.subject }}</dd>
          <dt>Sent</dt>
          <dd>by {{ message.sender }} at {{ message.created_at | date: i18n.long_date }}</dd>
          <dt>Message</dt>
          <dd><pre class="message">{{ message.body }}</pre></dd>
        </dl>
      </div>
    </div>
  </div>
</div>
